<div class="row">
    <div class="col-6 mt-5">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{id}}: {{burger_name}}
                        <button type="submit" class="updateBtn" data-id="{{id}}" data-devoured="{{devoured}}">EAT IT!</button>
                </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6 mt-5">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                <li class="burger-eaten">
                    {{id}}: {{burger_name}}
                </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
